<div style='text-align: left; max-width: 300px;'>
  <div style='margin-bottom: 8px;'>
    <strong style='color: #333;'><i class='fas fa-user'></i> <%= t('agency.schedules.customer') %>:</strong><br>
    <span style='color: #666;'><%= booking.user.username || booking.user.email %></span>
    <% if booking.user.phone.present? %>
      <br><small style='color: #888;'><i class='fas fa-phone'></i> <%= booking.user.phone %></small>
    <% end %>
  </div>
  
  <div style='margin-bottom: 8px;'>
    <strong style='color: #333;'><i class='fas fa-basketball-ball'></i> <%= t('agency.schedules.sport_field') %>:</strong><br>
    <span style='color: #666;'><%= booking.place_sport.sportfield.name %></span><br>
    <small style='color: #888;'><%= booking.place_sport.place.name %></small>
  </div>
  
  <div style='margin-bottom: 8px;'>
    <strong style='color: #333;'><i class='fas fa-clock'></i> <%= t('agency.schedules.time') %>:</strong><br>
    <span style='color: #666;'>
      <%= l(schedule.date, format: :long) %><br>
      <%= schedule.start_time.strftime('%H:%M') %> - <%= schedule.end_time.strftime('%H:%M') %>
    </span>
  </div>
  
  <div style='margin-bottom: 8px;'>
    <strong style='color: #333;'><i class='fas fa-money-bill-wave'></i> <%= t('agency.schedules.price') %>:</strong><br>
    <span style='color: #28a745; font-weight: 600;'><%= number_to_currency(booking.total_price, unit: 'Ä‘', precision: 0) %></span>
  </div>
  
  <div style='margin-bottom: 8px;'>
    <strong style='color: #333;'><i class='fas fa-info-circle'></i> <%= t('agency.schedules.status') %>:</strong><br>
    <% if booking.status == 'approved' %>
      <span style='color: #28a745; font-weight: 600;'><i class='fas fa-check-circle'></i> <%= t('agency.schedules.approved') %></span>
    <% elsif booking.status == 'completed' %>
      <span style='color: #007bff; font-weight: 600;'><i class='fas fa-flag-checkered'></i> <%= t('agency.schedules.completed') %></span>
    <% end %>
  </div>
  
  <% if booking.payments.any? %>
    <div style='margin-top: 8px; padding-top: 8px; border-top: 1px solid #ddd;'>
      <small style='color: #666;'>
        <i class='fas fa-credit-card'></i> <%= t('agency.schedules.payment_confirmed') %>
      </small>
    </div>
  <% end %>
</div>
