<div>
  <div class="row pb-5 align-items-center">
    <div class="col-4 d-flex justify-content-start align-items-center">
      <%= link_to admin_suppliers_path, class: 'btn btn-outline-secondary border-0 ps-2' do %>
        <i class="fas fa-arrow-left"></i>
        <%= t('common.back_to_list') %>
      <% end %>
     <h5 class="mb-0"><%= t('suppliers.title.deleted')%></h5>
    </div>
    <div class='col-8 pe-4'>
      <%= render 'admin/suppliers/search_form'%>
    </div>
  </div>
  
  <table class='table table-striped text-center align-middle'>
    <thead>
      <tr>
        <th class="text-start"><%= sort_link(@q, :name, t('suppliers.name'), default_order: :desc) %></th>
        <th class="text-start"><%= sort_link(@q, :code, t('suppliers.code'), default_order: :desc) %></th>
        <th class="text-start"><%= sort_link(@q, :email, t('suppliers.email'), default_order: :desc) %></th>
        <th><%= t('suppliers.phone') %></th>
        <th><%= sort_link(@q, :created_at, t('suppliers.created_at'), default_order: :desc) %></th>
        <th><%= sort_link(@q, :updated_at, t('suppliers.updated_at'), default_order: :desc) %></th>
        <th><%= t('suppliers.action') %></th>
      </tr>
    </thead>
    <tbody class='table-group-divider'>
      <% if @suppliers.any? %>
        <%= render @suppliers %>
      <% else %>
        <tr>
          <td class='text-center' colspan='7'><%= t('suppliers.no_suppliers') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= render 'layouts/admin/pagination', paging_collection: @suppliers %>
</div>
