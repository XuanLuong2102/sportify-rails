<div class="modal fade" id="deletePlaceSportModal-<%= place_sport.id %>" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title"><%= t('common.confirm') %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        <p class="mb-0 text-center">
          <%= t('admin.place_sports.confirm_delete') %>
        </p>
      </div>

      <div class="modal-footer">
        <button type="button"
                class="btn btn-outline-secondary"
                data-bs-dismiss="modal">
          <%= t('common.cancel') %>
        </button>

        <%= button_to soft_delete_admin_place_place_sport_path(place, place_sport),
              method: :patch,
              data: { turbo: false },
              params: { return_to: request.fullpath },
              class: 'btn btn-danger' do %>
          <%= t('common.delete') %>
        <% end %>
      </div>
    </div>
  </div>
</div>
