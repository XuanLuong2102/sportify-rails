<div class="d-flex justify-content-center">
  <div class="card shadow-sm border-0 w-100">
    <!-- Header -->
    <div class="card-header bg-info bg-gradient bg-opacity-50 d-flex justify-content-between align-items-center border-0 pb-4 pt-4">
      <h5 class="mb-0 w-100 text-center"><%= I18n.t('users.title.show') %></h5>
    </div>

    <!-- Body -->
    <div class="card-body container ">
      <div class="row mb-5 d-flex justify-content-between">
        <!-- Avatar & Username -->
        <div class="col-md-3 d-flex align-items-center">
          <%= image_tag @user.avatar_url(:avatar_100), class: 'img-fluid rounded-circle mb-2', width: 100, height: 100 %>
          <div class="ms-5">
            <div class="d-flex align-items-center">
              <h5 class="mt-2"><%= @user.username %></h5>
              <span class="ms-2 badge bg-<%= @user.is_locked ? 'danger' : 'success' %>">
                <%= I18n.t("users.status.#{@user.is_locked ? 'locked' : 'active'}") %>
              </span>
            </div>
            <%= @user.email %>
          </div>
        </div>
      </div>

      <!-- User info table -->
     <div class="row g-3 mt-3">
        <!-- Full Name -->
        <div class="col-md-6">
          <label class="form-label"><%= I18n.t('users.detail.fullname') %></label>
          <input type="text" class="form-control" value="<%= @user.full_name %>" readonly>
        </div>

        <!-- Email -->
        <div class="col-md-6">
          <label class="form-label"><%= I18n.t('users.detail.email') %></label>
          <input type="text" class="form-control" value="<%= @user.email %>" readonly>
        </div>

        <!-- Phone -->
        <div class="col-md-6">
          <label class="form-label"><%= I18n.t('users.detail.phone') %></label>
          <input type="text" class="form-control text-black" value="<%= @user.phone.presence || "-" %>" readonly>
        </div>

        <!-- Gender -->
        <div class="col-md-6">
          <label class="form-label"><%= I18n.t('users.detail.gender') %></label>
          <input type="text" class="form-control" value="<%= t("users.genders.#{@user.gender}") %>" readonly>
        </div>

        <!-- role -->
        <div class="col-md-6">
          <label class="form-label"><%= I18n.t('users.detail.role') %></label>
          <input type="text" class="form-control" value="<%= @user.role_name %>" readonly>
        </div>

        <!-- Birthday -->
        <div class="col-md-6">
          <label class="form-label"><%= I18n.t('users.detail.birthday') %></label>
          <input type="text" class="form-control" value="<%= @user.birthday&.strftime('%d/%m/%Y') || '-' %>" readonly>
        </div>

        <!-- Created At -->
        <div class="col-md-6">
          <label class="form-label"><%= I18n.t('users.detail.created_at') %></label>
          <input type="text" class="form-control" value="<%= format_datetime(@user.created_at) %>" readonly>
        </div>

        <!-- Updated At -->
        <div class="col-md-6">
          <label class="form-label"><%= I18n.t('users.detail.updated_at') %></label>
          <input type="text" class="form-control" value="<%= format_datetime(@user.updated_at) %>" readonly>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <div class="card-footer bg-light d-flex justify-content-center gap-2 border-0 mt-4">
      <%= link_to t('common.back'), back_to_list, class: 'btn btn-outline-secondary me-2 mt-2 mb-2' %>
      <button type="button"
              class="btn btn-warning ms-2 mt-2 mb-2"
              data-bs-toggle="modal"
              data-bs-target="#changeRoleModal">
        <%= t('users.buttons.change_role') %>
      </button>
    </div>
  </div>
</div>
<%= render 'admin/users/edit_role_modal' %>
