<div>
  <!-- Header with back button -->
  <div class="row mb-4 align-items-center">
    <div class="col">
      <h5 class="mb-0"><%= @product.name %></h5>
    </div>
    <div class="col-auto">
      <%= link_to admin_products_path, class: 'btn btn-outline-secondary btn-sm' do %>
        <i class="fa fa-arrow-left"></i> <%= t('common.back_to_list') %>
      <% end %>
      <%= link_to edit_admin_product_path(@product), class: 'btn btn-outline-primary btn-sm' do %>
        <i class="fa fa-pen"></i> <%= t('common.edit') %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <!-- Left Column - Images & Basic Info -->
    <div class="col-md-4">
      <!-- Thumbnail -->
      <div class="card mb-4">
        <div class="card-body text-center">
          <% if @product.thumbnail.attached? %>
            <%= image_tag @product.thumbnail.variant(:thumbnail_300), class: 'img-fluid rounded', alt: @product.name %>
          <% else %>
            <div class="bg-light p-5 rounded text-muted">
              <i class="fa fa-image fa-3x"></i>
              <p class="mt-2"><%= t('products.no_image') %></p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Product Gallery -->
      <div class="card">
        <div class="card-header fw-bold">
          <i class="fa fa-images"></i> <%= t('products.gallery') %>
        </div>
        <div class="card-body">
          <% if @product.product_images.any? %>
            <div class="row g-2">
              <% @product.product_images.each do |img| %>
                <div class="col-6">
                  <% if img.image.attached? %>
                    <%= image_tag img.image, class: 'img-fluid rounded border', alt: img.product_color&.name, data: { bs_toggle: 'tooltip', bs_placement: 'top' }, title: img.product_color&.name %>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-muted text-center py-4">
              <i class="fa fa-image"></i>
              <p class="mb-0"><small><%= t('products.no_images') %></small></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Right Column - Details -->
    <div class="col-md-8">
      <!-- Basic Information -->
      <div class="card mb-4">
        <div class="card-header fw-bold">
          <i class="fa fa-info-circle"></i> <%= t('common.information') %>
        </div>
        <div class="card-body">
          <div class="row mb-3">
            <div class="col-md-6">
              <p class="mb-1"><strong><%= t('products.brand') %>:</strong></p>
              <p class="text-muted"><%= @product.brand&.name || t('common.not_set') %></p>
            </div>
            <div class="col-md-6">
              <p class="mb-1"><strong><%= t('products.category') %>:</strong></p>
              <p class="text-muted"><%= @product.category&.name || t('common.not_set') %></p>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-6">
              <p class="mb-1"><strong><%= t('products.stock') %>:</strong></p>
              <p class="text-muted">
                <span class="badge bg-success">
                  <%= @product.product_variants.sum { |v| v.product_stocks.sum(&:stock_quantity) } %> <%= t('common.units') %>
                </span>
              </p>
            </div>
            <div class="col-md-6">
              <p class="mb-1"><strong><%= t('products.variants') %>:</strong></p>
              <p class="text-muted">
                <span class="badge bg-info">
                  <%= @product.product_variants.count %>
                </span>
              </p>
            </div>
          </div>

          <hr>

          <p class="mb-1"><strong><%= t('products.description') %>:</strong></p>
          <div class="text-muted" style="max-height: 150px; overflow-y: auto;">
            <%= simple_format(@product.description) || t('common.not_set') %>
          </div>
        </div>
      </div>

      <!-- Product Variants Table -->
      <div class="card">
        <div class="card-header fw-bold">
          <i class="fa fa-list"></i> <%= t('products.variants') %> (<%= @product.product_variants.count %>)
        </div>
        <div class="card-body p-0">
          <% if @product.product_variants.any? %>
            <div class="table-responsive">
              <table class="table table-hover mb-0">
                <thead class="table-light">
                  <tr>
                    <th><%= t('products.color') %></th>
                    <th><%= t('products.size') %></th>
                    <th><%= t('products.sku') %></th>
                    <th><%= t('products.price') %></th>
                    <th><%= t('products.stock') %></th>
                    <th class="text-end pe-3"><%= t('common.action') %></th>
                  </tr>
                </thead>
                <tbody>
                  <% @product.product_variants.each do |variant| %>
                    <tr>
                      <td>
                        <% if variant.product_color %>
                          <span class="badge" style="background-color: <%= variant.product_color.code_rgb || '#999999' %>; color: <%= hex_contrast_color(variant.product_color.code_rgb) %>">
                            <%= variant.product_color.name %>
                          </span>
                        <% else %>
                          <span class="text-muted">-</span>
                        <% end %>
                      </td>
                      <td><%= variant.product_size&.name || '-' %></td>
                      <td>
                        <code><%= variant.sku || '-' %></code>
                      </td>
                      <td>
                        <strong><%= number_to_currency(variant.price_vnd, unit: 'â‚«', format: '%n %u') %></strong>
                      </td>
                      <td>
                        <% stock = variant.product_stocks.sum(&:stock_quantity) %>
                        <span class="badge <%= stock > 0 ? 'bg-success' : 'bg-danger' %>">
                          <%= stock %> <%= t('common.units') %>
                        </span>
                      </td>
                      <td class="text-end pe-3">
                        <button class="btn btn-sm btn-info" data-bs-toggle="collapse" data-bs-target="#variant-<%= variant.id %>" aria-expanded="false">
                          <i class="fa fa-chevron-down"></i>
                        </button>
                      </td>
                    </tr>
                    <!-- Variant Details Row -->
                    <tr class="collapse" id="variant-<%= variant.id %>">
                      <td colspan="6">
                        <div class="p-3 bg-light rounded">
                          <div class="row">
                            <div class="col-md-6">
                              <p><strong><%= t('products.product_id') %>:</strong> <%= variant.product_id %></p>
                              <p><strong><%= t('products.color') %>:</strong> <%= variant.product_color&.name || '-' %></p>
                              <p><strong><%= t('products.size') %>:</strong> <%= variant.product_size&.name || '-' %></p>
                            </div>
                            <div class="col-md-6">
                              <p><strong>Price USD:</strong> <%= variant.price_usd || '-' %></p>
                              <p><strong>Created:</strong> <%= l variant.created_at, format: :short %></p>
                              <p><strong>Updated:</strong> <%= l variant.updated_at, format: :short %></p>
                            </div>
                          </div>
                          
                          <% if variant.product_stocks.any? %>
                            <hr>
                            <p class="fw-bold mb-2"><i class="fa fa-warehouse"></i> <%= t('products.stock_details') %></p>
                            <div class="table-responsive">
                              <table class="table table-sm table-bordered mb-0">
                                <thead>
                                  <tr class="table-secondary">
                                    <th><%= t('products.warehouse') %></th>
                                    <th><%= t('products.quantity') %></th>
                                    <th><%= t('common.updated_at') %></th>
                                  </tr>
                                </thead>
                                <tbody>
                                  <% variant.product_stocks.each do |stock| %>
                                    <tr>
                                      <td><%= stock.product_listing&.place&.name || '-' %></td>
                                      <td>
                                        <strong><%= stock.stock_quantity %></strong> <%= t('common.units') %>
                                      </td>
                                      <td><small><%= l stock.updated_at, format: :short %></small></td>
                                    </tr>
                                  <% end %>
                                </tbody>
                              </table>
                            </div>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="p-4 text-center text-muted">
              <i class="fa fa-inbox fa-2x mb-2"></i>
              <p><%= t('products.no_variants') %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .badge {
    padding: 0.5rem 0.75rem;
    font-weight: 500;
  }

  .table-hover tbody tr:hover {
    background-color: #f5f5f5;
  }

  code {
    background-color: #f5f5f5;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    color: #d63384;
  }
</style>

<script>
  // Initialize tooltips
  document.addEventListener('DOMContentLoaded', function() {
    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    tooltipTriggerList.map(function(tooltipTriggerEl) {
      return new bootstrap.Tooltip(tooltipTriggerEl);
    });
  });
</script>
