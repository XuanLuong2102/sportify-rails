              ðŸ‡»ðŸ‡³ <%= t('language.vietnamese') %>
            <% end %>

          </nav>
        </div>

        <!-- Logout -->
        <% if admin_user_signed_in? %>
          <%= button_to destroy_admin_user_session_path,
                method: :delete,
                class: 'nav-link btn btn-link text-start' do %>
            <div class="sb-nav-link-icon">
              <i class="fa-solid fa-circle-arrow-left"></i>
            </div>
            <%= t('sidebar.logout') %>
          <% end %>
        <% end %>

      </div>
    </div>
  </nav>
</div>
