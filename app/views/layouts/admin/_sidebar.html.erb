<div id="layoutSidenav_nav">
  <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
    <div class="sb-sidenav-menu">
      <div class="nav">

        <!-- Dashboard -->
        <%= link_to admin_root_path,
              class: "nav-link #{'active' if current_page?(admin_root_path)}" do %>
          <div class="sb-nav-link-icon">
            <i class="fa-solid fa-chart-simple"></i>
          </div>
          <%= t('sidebar.homepage') %>
        <% end %>

        <div class="sb-sidenav-menu-heading text-white text-uppercase fs-heading">
          <%= t('sidebar.manager') %>
        </div>

        <!-- Places tab side bar -->
        <%= link_to admin_places_path,
              class: "nav-link #{'active' if controller_name == 'places'}" do %>
          <i class="fas fa-map-marker-alt me-2"></i>
          <%= t('sidebar.places') %>
        <% end %>

        <!-- Sportfields tab side bar -->
        <%= link_to admin_sportfields_path,
              class: "nav-link #{'active' if controller_name == 'sportfields'}" do %>
          <i class="fas fa-futbol me-2"></i>
