<div class="container mt-5 d-flex justify-content-center">
  <div class="card shadow-sm border-0 w-75">
    <!-- Header -->
    <div class="card-header bg-info bg-gradient bg-opacity-50 d-flex justify-content-between align-items-center border-0 pb-4 pt-4">
      <h4 class="mb-0 w-100 text-center"><%= I18n.t('users.detail.infor') %></h4>
    </div>

    <!-- Body -->
    <div class="card-body">
      <div class="row mb-4 d-flex justify-content-between">
        <!-- Avatar & Username -->
        <div class="col-md-3 d-flex align-items-center">
          <%= image_tag "default-avatar.png", class: "img-fluid rounded-circle mb-2", width: 100, height: 100 %>
          <div class="ms-5">
            <div class="d-flex align-items-center">
              <h5 class="mt-2"><%= @user.username %></h5>
              <span class="ms-2 badge bg-<%= @user.is_locked ? 'danger' : 'success' %>">
                <%= I18n.t("users.detail.#{ @user.is_locked ? 'locked' : 'active' }") %>
              </span>
            </div>
            <%= @user.email %>
          </div>
        </div>
      </div>

      <!-- User info update -->
      <%= form_with model: @user, url: user_path(@user), method: :patch, local: true, html: { id: "user-update-form" } do |f| %>
        <div class="row g-3">
          <!-- First Name -->
          <div class="col-md-4">
            <%= f.label :first_name, I18n.t('users.detail.first_name'), class: "form-label" %>
            <%= f.text_field :first_name, class: "form-control" %>
          </div>

          <!-- Middle Name -->
          <div class="col-md-4">
            <%= f.label :middle_name, I18n.t('users.detail.middle_name'), class: "form-label" %>
            <%= f.text_field :middle_name, class: "form-control" %>
          </div>

          <!-- Last Name -->
          <div class="col-md-4">
            <%= f.label :last_name, I18n.t('users.detail.last_name'), class: "form-label" %>
            <%= f.text_field :last_name, class: "form-control" %>
          </div>

          <!-- Phone -->
          <div class="col-md-6">
            <%= f.label :phone, I18n.t('users.detail.phone'), class: "form-label" %>
            <%= f.text_field :phone, class: "form-control" %>
          </div>

          <!-- Gender -->
          <div class="col-md-6">
            <%= f.label :gender, I18n.t('users.detail.gender'), class: "form-label" %>
            <%= f.select :gender, [[I18n.t('users.detail.male'), 1], [I18n.t('users.detail.female'), 0]], {}, class: "form-select" %>
          </div>
        </div>
      <% end %>

      <!-- Footer -->
      <div class="card-footer bg-light d-flex justify-content-center gap-2 border-0 pt-4 pb-4">
        <div class="d-flex col-md-2">
          <button type="submit" form="user-update-form" class="btn btn-success w-100 pt-2 pb-2">
            <i class="bi bi-check2-circle me-2"></i>
            <%= I18n.t('buttons.update') %>
          </button>
        </div>
        <div class="d-flex col-md-2">
          <%= link_to user_path(@user), class: "btn btn-danger w-100 pt-2 pb-2" do %>
            <i class="bi bi-x"></i><%= I18n.t('buttons.cancel') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
